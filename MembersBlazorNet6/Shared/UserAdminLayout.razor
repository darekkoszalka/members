@inherits LayoutComponentBase

<PageTitle>Members</PageTitle>


    <div class="page">
        
            <div class="sidebar">
                <UserAdminMenu UnionInstitutionId="UnionInstitutionId"/>
            </div>
        
        

        <main>
            <div class="top-row px-4 auth">
                <LoginDisplay />

            </div>

            <article class="content px-4">
                <RadzenDialog />
                <RadzenTooltip />
                <RadzenNotification />
                @Body
            </article>
        </main>
    </div>

    @code {

        public int UnionInstitutionId { get; set; }

        protected override void OnParametersSet()
        {
            // pull out the "ID" parameter from the route data
            object unionId = null;
            if ((this.Body.Target as RouteView)?.RouteData.RouteValues?.TryGetValue("UnionInstitutionId", out unionId) == true)
            {
                UnionInstitutionId = Int32.Parse(unionId.ToString());
            }
            
            
        }

    }
