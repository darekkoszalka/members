<div class="row">
    <div class="col-12 d-flex justify-content-between">

        <h3>@Title</h3>
        <p>@Today.ToString("dddd, dd MMMM yyyy")</p>
    </div>
    <hr/>
</div>

@code {

    [Parameter]
    public string? Title { get; set; }

    public DateTime Today { get; set; } = DateTime.Now;


}

